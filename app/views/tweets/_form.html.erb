<%= form_for(@tweet, url: choose_new_or_edit ) do |f| %>
  <% if @tweet.errors.any? %>
     <div id="errors_explaination">
       <p><%= @tweet.errors.count %>件のエラーが発生しました。</p>
         <ul>
           <%= @tweet.errors.full_messages.each do |message| %>
           <li><%= message %></li>
           <% end %>
         </ul>
     </div>
  <% end %>
       
  <br>
  <div id="submit">
  <%= f.label :ツイートする %>
  <br>
  <%= f.text_area :content, class: 'form-control' %>
  <br>
  <%= f.submit "送　信", class: 'btn btn-block submit'%>
  </div>
<% end %>